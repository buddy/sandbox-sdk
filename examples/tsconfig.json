{
	"extends": [
		"@tsconfig/strictest/tsconfig.json",
		"@tsconfig/node20/tsconfig.json"
	],
	"compilerOptions": {
		"target": "es2022",
		"module": "esnext",
		"moduleResolution": "bundler",
		"rootDir": "./src",
		"outDir": "./dist",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
