{
	"extends": [
		"@tsconfig/strictest/tsconfig.json",
		"@tsconfig/node20/tsconfig.json"
	],
	"compilerOptions": {
		"target": "es2022",
		"exactOptionalPropertyTypes": false,
		"module": "esnext",
		"moduleResolution": "bundler",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"~/*": ["./*"]
		}
	},
	"include": ["src/**/*.ts", "scripts/**/*.ts", "tests/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
